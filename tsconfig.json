{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "lib": ["DOM", "es6", "dom.iterable", "scripthost"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/types/*": ["./src/types/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/decorators/*": ["./src/decorators/*"],
      "@/classes/*": ["./src/classes/entities/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
